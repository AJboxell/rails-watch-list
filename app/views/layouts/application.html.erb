<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-lewagon d-flex">
      <div>
        <%= image_tag "Film-icon.png", alt: "films", width: 40 %>
      </div>
      <div>
        <%= link_to 'My Lists', lists_path, :class => "btn btn-primary" %>
        <%= link_to 'Add List', new_list_path, :class => "btn btn-primary"  %>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
